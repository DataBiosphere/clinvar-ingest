{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "staging": {
      "type": "object",
      "properties": {
        "gcsBucket": { "type": "string" },
        "bigquery": {
          "type": "object",
          "properties": {
            "project": { "type": "string" },
            "datasetPrefix": { "type": "string" },
            "description": { "type": "string" },
            "expiration": { "type": "string" }
          },
          "required": ["datasetPrefix", "description", "expiration"]
        }
      },
      "required": ["gcsBucket", "bigquery"]
    },
    "jade": {
      "type": "object",
      "properties": {
        "url": { "type": "string" },
        "datasetId": { "type": "string" },
        "datasetName": { "type": "string" },
        "profileId": { "type": "string" },
        "pollTimeout": { "type": "integer" },
        "dataProject": { "type": "string" },
        "accessKey": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "secretKey": { "type": "string" }
          },
          "required": ["secretName", "secretKey"]
        }
      },
      "required": ["url", "datasetId", "datasetName", "profileId", "pollTimeout", "dataProject", "accessKey"]
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "k8sName": { "type": "string" },
        "googleName": { "type": "string" }
      },
      "required": ["k8sName", "googleName"]
    },
    "volumes": {
      "type": "object",
      "properties": {
        "storageClass": { "type": "string" },
        "downloadSize": { "type": "string" },
        "extractSize": { "type": "string" }
      },
      "required": ["storageClass", "downloadSize", "extractSize"]
    },
    "cron": {
      "type": "object",
      "properties": {
        "enable": { "type": "boolean" },
        "schedule": { "type": "string" },
        "timezone": { "type": "string" }
      },
      "required": ["enable", "schedule"]
    },
    "dataflow": {
      "type": "object",
      "properties": {
        "project": { "type": "string" },
        "region": { "type": "string" },
        "tmpBucketName": { "type": "string" },
        "subnetName": { "type": "string" },
        "workerAccount": { "type": "string" },
        "workerMachineType": { "type": "string" },
        "autoscaling": {
          "type": "object",
          "properties": {
            "minWorkers": {
              "type": "integer",
              "minimum": 1
            },
            "maxWorkers": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["minWorkers", "maxWorkers"]
        }
      },
      "required": ["project", "region", "tmpBucketName",  "subnetName", "workerAccount",
                   "workerMachineType", "autoscaling"]
    },
    "notification": {
      "type": "object",
      "properties": {
        "onlyOnFailure": { "type": "boolean" },
        "slackUrl": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "secretKey": { "type": "string" }
          },
          "required": ["secretName", "secretKey"]
        }
      },
      "required": ["onlyOnFailure", "slackUrl"]
    },
    "clingen": {
      "type": "object",
      "properties": {
        "gcsBucket": { "type": "string" },
        "kafka": {
          "type": "object",
          "properties": {
            "topic": { "type": "string" },
            "secretName": { "type": "string" }
          },
          "required": ["topic", "secretName"]
        }
      },
      "required": ["gcsBucket", "kafka"]
    }
  },
  "required": ["staging", "jade", "serviceAccount", "volumes", "cron", "dataflow", "notification", "clingen"]
}
