{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "gcs": {
      "type": "object",
      "properties": {
        "bucketName": { "type": "string" }
      },
      "required": ["bucketName"]
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "k8sName": { "type": "string" },
        "googleName": { "type": "string" }
      },
      "required": ["k8sName", "googleName"]
    },
    "volumes": {
      "type": "object",
      "properties": {
        "storageClass": { "type": "string" },
        "downloadSize": { "type": "string" },
        "extractSize": { "type": "string" }
      },
      "required": ["storageClass", "downloadSize", "extractSize"]
    },
    "cron": {
      "type": "object",
      "properties": {
        "enable": { "type": "boolean" },
        "schedule": { "type": "string" },
        "timezone": { "type": "string" }
      },
      "required": ["enable", "schedule"]
    },
    "dataflow": {
      "type": "object",
      "properties": {
        "project": { "type": "string" },
        "region": { "type": "string" },
        "tmpBucketName": { "type": "string" },
        "subnetName": { "type": "string" },
        "workerAccount": { "type": "string" },
        "workerMachineType": { "type": "string" },
        "autoscaling": {
          "type": "object",
          "properties": {
            "minWorkers": {
              "type": "integer",
              "minimum": 1
            },
            "maxWorkers": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["minWorkers", "maxWorkers"]
        },
        "useFlexRS": { "type": "boolean" }
      },
      "required": ["project", "region", "tmpBucketName",  "subnetName", "workerAccount",
                   "workerMachineType", "autoscaling", "useFlexRS"]
    },
    "bigquery": {
      "type": "object",
      "properties": {
        "stagingData": {
          "type": "object",
          "properties": {
            "project": { "type": "string" },
            "dataset": { "type": "string" }
          },
          "required": ["project", "dataset"]
        },
        "jadeData": {
          "type": "object",
          "properties": {
            "project": { "type": "string" },
            "dataset": { "type": "string" }
          },
          "required": ["project", "dataset"]
        }
      },
      "required": ["stagingData", "jadeData"]
    },
    "repo" : {
      "type": "object",
      "properties": {
        "apiUrl": {"type":  "string"},
        "datasetId": {"type": "string"},
        "profileId": {"type": "string"},
        "targetPath": {"type":  "string"},
        "pollTimeout": {"type":  "integer"}
        },
      "required": ["apiUrl", "datasetId", "profileId", "targetPath", "pollTimeout"]
    },
    "maxParallelism": { "type": "integer" }
  },
  "required": ["gcs", "serviceAccount", "volumes", "cron", "dataflow", "repo", "maxParallelism"]
}
